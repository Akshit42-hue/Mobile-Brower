<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.005"
        android:background="@color/colorAccent"
        android:weightSum="2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1.9"
                    android:weightSum="3">

                    <EditText
                        android:id="@+id/url_EditText_ID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Enter URL"
                        android:inputType="textWebEditText"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp">

                    </EditText>

                    <ImageButton
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:id="@+id/go_Button_ID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:src="@drawable/ic_go_button"
                        android:layout_weight="1.3"
                        android:layout_marginTop="10dp">

                    </ImageButton>

                    <ImageButton
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:id="@+id/popUpPanel_ID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:layout_weight="1.3"
                        android:contentDescription="@string/menu"
                        android:onClick="showPopup"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"

                        android:src="@drawable/ic_pop_back">

                    </ImageButton>

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar_ID"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1">
                </ProgressBar>

            </LinearLayout>


    <WebView
        android:id="@+id/webView_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".98">


    </WebView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".015"
        android:weightSum="5"
        android:background="@color/colorAccent">

        <ImageButton
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:id="@+id/backButton_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_arrowback">
        </ImageButton>

        <ImageButton
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:id="@+id/forwardButton_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_forward"
            >
        </ImageButton>

        <ImageButton
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:id="@+id/stopButton_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_cancel">
        </ImageButton>

        <ImageButton
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:id="@+id/refreshButon_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_refresh_24">
        </ImageButton>

        <ImageButton
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:id="@+id/homeButton_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            >
        </ImageButton>

    </LinearLayout>







</LinearLayout>


